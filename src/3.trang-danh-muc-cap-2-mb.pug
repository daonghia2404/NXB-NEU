                .CardWithTitle-list-layout-item.list.flex.flex-wrap.tab-main
                  each item in dataBooksHorizontalList
                    .CardWithTitle-books-list-item.horizontal
                      +BookBlock(item)
                  each item in dataBooksHorizontalList
                    .CardWithTitle-books-list-item.horizontal
                      +BookBlock(item)

                .CardWithTitle-list-layout-item.grid.flex.flex-wrap.tab-main
                  each item in dataBooksList 
                    .CardWithTitle-books-grid-item
                      +BookBlock(item)

                .CardWithTitle-list-layout-pagination 
                  +Pagination({})
