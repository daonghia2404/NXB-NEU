            .CardWithTitle-body
              .CardWithTitle-list-layout 
                .CardWithTitle-list-layout-filter 
                  +FilterTags({ data: dataFilterCategoriesBook })

                .CardWithTitle-list-layout-item.list.flex.flex-wrap.tab-main
                  each item in dataBooksList
                    .CardWithTitle-books-list-item
                      +BookBlock(item)
                  each item in dataBooksList
                    .CardWithTitle-books-list-item
                      +BookBlock(item)

                .CardWithTitle-list-layout-item.grid.tab-main
                  each item in dataBooksHorizontalGrid 
                    .CardWithTitle-books-horizontal-grid-item
                      +BookBoxHorizontal(item)

                .CardWithTitle-list-layout-pagination 
                  +Pagination({})
