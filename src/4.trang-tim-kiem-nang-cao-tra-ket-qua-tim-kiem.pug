extends includes/layouts/Layout.pug

block pages
  .CategoryPage.layout
    .container  
      +Breadcrumb({ data: [
        { link: '#', title: 'Trang chủ' },
        { link: '#', title: 'Danh mục sách' },
        { link: '#', title: 'Chính trị - xã hội' },
      ] })
      .layout-wrapper.flex 
        .layout-col.left
          .CardWithTitle
            .CardWithTitle-header.flex.items-center.justify-between
              .CardWithTitle-header-title PHÂN LOẠI

            .CardWithTitle-body 
              +FolderTree({ title: 'Nguồn tài liệu', data: dataFolderTree1 })
              +FolderTree({ title: 'Theo chủ đề', data: dataFolderTree2 })
              +FolderTree({ title: 'Theo tác giả', seeMore: true, data: dataFolderTree3 })

          .CardWithTitle
            .CardWithTitle-header.flex.items-center.justify-between
              .CardWithTitle-header-title Thống kê

            .CardWithTitle-body 
              +CardInfo({ data: dataCardInfoStatistical1 })
              +CardInfo({ data: dataCardInfoStatistical2 })

        .layout-col.main
          include includes/containers/SearchAdvanced.pug

          .CardWithTitle.tab-wrapper
            .CardWithTitle-header.flex.items-center.justify-between
              .CardWithTitle-header-title TẤT CẢ SÁCH
