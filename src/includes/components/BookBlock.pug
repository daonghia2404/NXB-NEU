mixin BookBlock({ className = '', image, title, layout = 'vertical', link = '#' })
  .BookBlock(class=`${className} ${layout}`)
    .BookBlock-image 
      a(href=`${link}`)
        img(src=`${image}`, alt="")

    .BookBlock-title
      a(href=`${link}`)= title
