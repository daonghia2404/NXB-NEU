mixin Checkbox({ className = '', type = 'text', size = 'middle', label = '' })
  label.Checkbox(class=`${className} ${!label ? 'single' : ''}`)
    .Checkbox-control.flex.items-start
      input(type="checkbox").Checkbox-input
      
      .Checkbox-wrapper
        img(src="./assets/icons/icon-check-white.svg", alt="")


      .Checkbox-label= label