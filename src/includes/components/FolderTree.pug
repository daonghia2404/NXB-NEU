mixin FolderTree({ className = '', title, seeMore, data = [] })
  .FolderTree(class=`${className}`)
    .FolderTree-title= title
    .FolderTree-group 
      each item in data
        .FolderTree-group-item 
          .FolderTree-group-item-label.flex.items-start.flex-wrap.justify-between
            .FolderTree-item-label-icon 
              <svg width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M19.875 8.12109H15.375L14.0859 6.85547C13.9453 6.71484 13.7578 6.62109 13.5469 6.62109H10.125C9.49219 6.62109 9 7.13672 9 7.74609V9.62109H7.125C6.49219 9.62109 6 10.1367 6 10.7461V17.4961C6 18.1289 6.49219 18.6211 7.125 18.6211H16.875C17.4844 18.6211 18 18.1289 18 17.4961V15.6211H19.875C20.4844 15.6211 21 15.1289 21 14.4961V9.24609C21 8.63672 20.4844 8.12109 19.875 8.12109ZM16.875 17.4961H7.125V10.7461H9V14.4961C9 15.1289 9.49219 15.6211 10.125 15.6211H16.875V17.4961ZM19.875 14.4961H10.125V7.74609H13.4062L14.6719 9.03516C14.8125 9.17578 15 9.24609 15.2109 9.24609H19.875V14.4961Z" fill="#323232"/></svg>

            .FolderTree-group-item-info.flex.items-start
              span.FolderTree-item-label= item.label
              if item.count
                .FolderTree-item-badge= item.count

            if item.subItems && item.subItems.length > 0
              .FolderTree-group-item-arrow 
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 9.3335L8.70711 6.0406C8.31658 5.65008 7.68342 5.65008 7.29289 6.0406L4 9.3335" stroke="#828282" stroke-width="1.5" stroke-linecap="round"/></svg>
            
          if item.subItems && item.subItems.length > 0
            .FolderTree-subItems 
              each subItem in item.subItems
                .FolderTree-subItems-item.flex.items-start
                  .FolderTree-subItems-item-icon
                    <svg width="24" height="16" viewBox="0 0 24 16" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 1.27353L12 4.77353L12 8.27353H19" stroke="black" stroke-width="0.5"/></svg>
                  span.FolderTree-item-label= subItem.label 

                  if subItem.count
                    .FolderTree-item-badge= subItem.count

    if seeMore
      .FolderTree-see-more.flex.items-center.justify-center 
